{
  "compilerOptions": {
    "target": "ES2016",                      // Better async/await, optional chaining, etc.
    "module": "CommonJS",                    // Required for Node.js with ts-node
    "rootDir": "./src",                      // Where your TypeScript source files live
    "outDir": "./dist",                      // Output for compiled JS
    "esModuleInterop": true,                 // Allow default imports from CJS modules
    "sourceMap": true,                       // Enable .map files for debugging
    "strict": true,                          // Enable all strict type-checking options
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                     // Avoid unnecessary type-checking of node_modules
  },
  "include": ["src"]
}